#include "Node.h"

//=================================================================================================
// Class Declarations
//=================================================================================================

//-------------------------------------------------------------------------------------------------
// Constuctors
//-------------------------------------------------------------------------------------------------

Node::Node()
	: mpParent(NULL)
	, mID(kInvalidID)
	, mPosition(0.0f, 0.0f)
	, mG(0.0f)
	, mH(0.0f)
	, mOpen(false)
	, mClosed(false)
	, mValid(true)
{
	memset(mpNeighbors, 0, sizeof(Node*) * kMaxNeighbors);
}

//-------------------------------------------------------------------------------------------------
// General
//-------------------------------------------------------------------------------------------------

void Node::Reset()
{
	mpParent = NULL;
	mG = 0.0f;
	mH = 0.0f;
	mOpen = false;
	mClosed = false;
}

